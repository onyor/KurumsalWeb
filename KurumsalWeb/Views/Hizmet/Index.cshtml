@model IEnumerable<KurumsalWeb.Models.Model.Hizmet>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hizmetler</h2>

<p>
    @Html.ActionLink("Hizmet Oluştur", "Create")
</p>

<table class="table table-striped table-advance table-hover table-advance table-active">
    <thead>
        <tr>
            <th>#</th>
            <th><i class="icon_profile"></i> Başlık</th>
            <th><i class="icon_calendar"></i> Açıklama</th>
            <th><i class="icon_mail_alt"></i> Resim URL</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.HizmetId</td>
                <td>@item.Baslik</td>
                <td>
                    @Html.Raw(item.Aciklama)
                </td>
                <td><img width="100" height="100" src="@item.ResimURL" /></td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-primary" href="/Hizmet/Edit/@item.HizmetId"><i class="icon_plus_alt2"></i>Düzenle</a>
                        <a class="btn btn-success" href="/Hizmet/Details/@item.HizmetId"><i class="icon_check_alt2"></i>Detay</a>
                        <a class="btn btn-danger"  href="/Hizmet/Delete/@item.HizmetId"><i class="icon_close_alt2"></i>Sil</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>