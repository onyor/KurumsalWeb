@model IEnumerable<KurumsalWeb.Models.Model.Yorum>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script>
    $(document).ready(function () {
        $('#myTable').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
            }
        });
    });
</script>
<table class="table table-striped table-advance table-hover table-advance table-active" id="myTable">
    <thead>
        <tr>
            <th>#</th>
            <th><i class="icon_profile"></i> Başlık</th>
            <th><i class="icon_calendar"></i> Ad Soyad</th>
            <th><i class="icon_calendar"></i> E Posta</th>
            <th><i class="icon_calendar"></i> İçerik</th>
            <th><i class="icon_calendar"></i> Onay</th>
            <th>İşlemler</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.YorumId</td>
                <td>
                    @item.Blog.Baslik
                </td>
                <td>
                    @item.AdSoyad
                </td>
                <td>
                    @item.Eposta
                </td>
                <td>
                    @item.Icerik
                </td>
                <td>
                    @item.Onay
                </td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-primary" href="/Yorum/Edit/@item.YorumId"><i class="icon_plus_alt2"></i>Düzenle</a>
                        <a class="btn btn-success" href="/Yorum/Details/@item.YorumId"><i class="icon_check_alt2"></i>Detay</a>
                        <a class="btn btn-danger" href="/Yorum/Delete/@item.YorumId"><i class="icon_close_alt2"></i>Sil</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
