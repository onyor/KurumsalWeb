@model IEnumerable<KurumsalWeb.Models.Model.Slider>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<p>
    @Html.ActionLink("Yeni Slider Ekle", "Create")
</p>
<table class="table table-striped table-advance table-hover table-advance table-active">
    <thead>
        <tr>
            <th>
                <i class="icon_profile"></i>
                @Html.DisplayNameFor(model => model.Baslik)
            </th>
            <th>
                <i class="icon_calendar"></i> 
                @Html.DisplayNameFor(model => model.Aciklama)
            </th>
            <th>
                <i class="icon_calendar"></i>
                @Html.DisplayNameFor(model => model.ResimURL)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Baslik)
            </td>
            <td>
                @Html.Raw(item.Aciklama)
            </td>
          
            <td><img width="350" height="150" src="@item.ResimURL" /></td>
            
            <td>
                <div class="btn-group">
                    <a class="btn btn-primary" href="/Slider/Edit/@item.SliderId"><i class="icon_plus_alt2"></i>Düzenle</a>
                    <a class="btn btn-success" href="/Slider/Details/@item.SliderId"><i class="icon_check_alt2"></i>Detay</a>
                    <a class="btn btn-danger" href="/Slider/Delete/@item.SliderId"><i class="icon_close_alt2"></i>Sil</a>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>
