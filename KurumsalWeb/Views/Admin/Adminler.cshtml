@model IEnumerable<KurumsalWeb.Models.Model.Admin>

@{
    ViewBag.Title = "Adminler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Adminler</h2>

<p>
    @Html.ActionLink("Admin Ekle", "Create")
</p>
<table class="table table-striped table-advance table-hover table-advance table-active">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Eposta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sifre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Yetki)
            </th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Eposta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sifre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Yetki)
            </td>
            <td>
                <div class="btn-group">
                    <a class="btn btn-primary" href="/Admin/Edit/@item.AdminId"><i class="icon_plus_alt2"></i>Düzenle</a>
                    <a class="btn btn-success" href="/Admin/Details/@item.AdminId"><i class="icon_check_alt2"></i>Detay</a>
                    <a class="btn btn-danger" href="/Admin/Delete/@item.AdminId"><i class="icon_close_alt2"></i>Sil</a>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>