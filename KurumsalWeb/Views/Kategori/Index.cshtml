@model IEnumerable<KurumsalWeb.Models.Model.Kategori>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Kategoriler</h2>

<p>
    @Html.ActionLink("Kategori Ekle", "Create")
</p>
<table class="table table-striped table-advance table-hover table-advance table-active">
    <thead>
        <tr>
            <th>#</th>
            <th>
                @Html.DisplayNameFor(model => model.KategoriAd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aciklama)
            </th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.KategoriId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KategoriAd)
            </td>
            <td>
                @Html.Raw(item.Aciklama)
            </td>
            <td>
                <div class="btn-group">
                    <a class="btn btn-primary" href="/Kategori/Edit/@item.KategoriId"><i class="icon_plus_alt2"></i>Düzenle</a>
                    <a class="btn btn-success" href="/Kategori/Details/@item.KategoriId"><i class="icon_check_alt2"></i>Detay</a>
                    <a class="btn btn-danger" href="/Kategori/Delete/@item.KategoriId"><i class="icon_close_alt2"></i>Sil</a>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>