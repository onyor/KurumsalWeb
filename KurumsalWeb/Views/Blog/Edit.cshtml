
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script type="text/javascript">
    CKEDITOR.replace('editor');
</script>
@model KurumsalWeb.Models.Model.Blog
<h2>Blog Yazısı Düzenle</h2>
@*enctype="multipart/form-data"  Resim Ekleme İşlemi İçin*@
@using (Html.BeginForm("Edit","Blog",FormMethod.Post,new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken();
    <div class="form">
        <form class="form-validate form-horizontal" id="feedback_form">
            <div class="form-group ">
                <label for="cname" class="control-label col-lg-2">Başlık <span class="required">*</span></label>
                <div class="col-lg-10">
                    <input class="form-control" id="Baslik" name="Baslik" minlength="5" type="text" required value="@Model.Baslik" />
                </div>
            </div>
            <div class="form-group ">
                <label for="cemail" class="control-label col-lg-2">İçerik <span class="required">*</span></label>
                <div class="col-lg-10">
                    <textarea required name="Icerik" class="ckeditor">@Model.Icerik</textarea>
                </div>
            </div>
            <div class="form-group ">
                <label for="cname" class="control-label col-lg-2">Kategori <span class="required">*</span></label>
                <div class="col-lg-10">
                    @Html.DropDownList("KategoriId", null, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group ">
                <label for="curl" class="control-label col-lg-2">Blog Resmi</label>
                <div class="col-lg-10">
                    <img src="@Model.ResimURL" width="150" height="100" />
                </div>
            </div>
            <div class="form-group ">
                <label for="curl" class="control-label col-lg-2">Resim</label>
                <div class="col-lg-10">
                    <input type="file" class="form-control " id="curl" name="ResimURL" accept=".jpeg,.jpg,.png" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                    <button class="btn btn-primary" type="submit">Kaydet</button>
                </div>
            </div>
        </form>
    </div>
}
<div>
    @Html.ActionLink("Geri Dön", "Index")
</div>