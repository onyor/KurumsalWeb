@model IEnumerable<KurumsalWeb.Models.Model.Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@*Birden fazla kayıt gelirse IEnumerable, Tek bir kayıt olursa Model*@
<h2>Blog Kayıtları</h2>
<script>
    $(document).ready(function () {
        $('#myTable').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
            }
        } );
    });
</script>
<p>
    @Html.ActionLink("Yeni Blog Ekle", "Create")
</p>

<table class="table table-striped table-advance table-hover table-advance table-active" id="myTable">
    <thead>
        <tr>
            <th>#</th>
            <th><i class="icon_profile"></i> Başlık</th>
            <th><i class="icon_calendar"></i> Kategori</th>
            <th><i class="icon_calendar"></i> Resim URL</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.BlogId</td>
                <td>@item.Baslik</td>
                <td>@item.Kategori.KategoriAd</td>
                <td><img width="100" height="100" src="@item.ResimURL" /></td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-primary" href="/Blog/Edit/@item.BlogId"><i class="icon_plus_alt2"></i>Düzenle</a>
                        <a class="btn btn-success" href="/Blog/Details/@item.BlogId"><i class="icon_check_alt2"></i>Detay</a>
                        <a class="btn btn-danger" href="/Blog/Delete/@item.BlogId"><i class="icon_close_alt2"></i>Sil</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

